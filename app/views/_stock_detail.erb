<div class = "stock_detail" id="<%=stock.symbol%>" data-price="<%=stock.last_trade_price%>" data-share-quantity="<%=stock.user_shares%>">
  <div class ="stock_header"><%= "#{stock.name} (#{stock.symbol})" %></div>
  <div class="price">$ <%= stock.last_trade_price %></div>
  <div class="shares">Shares: <%= stock.user_shares %></div>
  <div class="user_share_value"></div>
  <div class="more_info"></div>
  <div class = "remove_stock">
    <a href = "#" class="delete_stock" data-symbol = "<%=stock.symbol %>">x</a>
  </div>
</div>